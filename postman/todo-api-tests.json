              "pm.test('Task is created with correct data', function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData).to.have.property('id');",
              "    pm.expect(jsonData.title).to.eql('Postman Test Task');",
              "    pm.expect(jsonData.priority).to.eql('hög');",
              "    ",
              "    // Save task ID for later tests",
              "    pm.environment.set('test_task_id', jsonData.id);",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ],
